<h2>Add an Album</h2>
<% bands = @bands %>
<form name="band" action="<%= band_albums_path %>" method="post">
  <label for="name">Album Name</label>
  <input type="text" id="name" name="album[name]">

  <h3>Select Band</h3>
  <select name="album[band_id]">
  <% bands.each do |band| %>
    <option value=<%= band.id %>
       <%= selected if band.id == params[:band_id] %> >
    <%= band.name %></option>
  <% end %>
  </select>
  <br>
  <br>

  <h3>Choose recording type</h3>
  <label for="live">Live</label>
  <input type="radio" id="live" value="live" name="album[recording]">
  <label for="live">Studio</label>
  <input type="radio" id="studio" value="studio" name="album[recording]">
  <br>
  <br>
  <input type="submit" value="Add Album">
</form>