<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:errors] %>
  <p><%= flash[:errors] %></p>
<% end %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if current_user %>
  <%= button_to "Logout", session_url, :method => :delete  %>
<% else %>
  <%= link_to "Sign Up", new_user_url %>
  <%= link_to "Log In", new_session_url %>
<% end %>
<%= yield %>
<br>
<br>
<%= link_to "Home", root_path %>
<br>
<br>
<%= link_to "Bands", bands_path %>
<%= debug params %>
</body>
</html>
